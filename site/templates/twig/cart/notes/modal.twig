{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	qnotes                 module QnotesCart
#}
<div class="modal fade" id="notes-modal" tabindex="-1" role="dialog" aria-labelledby="notes-modal-label" aria-hidden="true" data-input="">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="notes-modal-label">
					<b><span class="itemid"></span></b> Notes
				</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form action="{{ page.url }}" method="POST" id="cart-notes-form">
					<input type="hidden" name="itemID">

					<div class="form-group">
						<textarea name="note" cols="{{ qnotes.get_column_count() - 1 }}" rows="10" class="form-control w-auto qnotes" wrap="hard"></textarea>
					</div>
					<div class="d-flex w-100 justify-content-between">
						<button type="submit" name="action" value="update-notes" class="btn btn-success">
							<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
						</button>
						<button type="submit" name="action" value="delete-notes" class="btn btn-danger">
							<i class="fa fa-trash-o" aria-hidden="true"></i> Delete
						</button>
						<button type="button" class="btn btn-warning" data-dismiss="modal">
							<i class="fa fa-times" aria-hidden="true"></i> Close
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
