{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	cart                   module Cart
	item                   Cart
	inventory              Dplus\Wm\Inventory\Lots\Lookup\ExcludePackBin
#}
<div class="form-row">
	<div class="col-4">
		{{ item.itemid }} <br>
		<small class="text-muted s-70">{{ item.desc1 }}</small>
	</div>
	<div class="col-1 text-center">
		{{ imitem.uom_sale }}
	</div>
	<div class="col-2 text-right">
		<form action="{{ page.url }}" method="POST">
			<input type="hidden" name="action" value="update-item-qty">
			<input type="hidden" name="itemID" value="{{ item.itemid }}">

			<div class="placard placard-qty" data-ellipsis="true" data-initialize="placard">
				<div class="placard-popup"></div>
				<div class="placard-header">
					<b>Qty</b> <span class="qty"></span>
				</div>
				<input class="form-control placard-field form-control-sm text-right pull-right w-50 qty-input" type="number" name="qty" value="{{ item.qty }}" data-qty="{{ item.qty }}" autocomplete="off" {{ cart.lots.lineHasLots(item.recordno) ? 'disabled' : ''}}>
				<div class="placard-footer">
					<a class="placard-cancel" href="#">Cancel</a>
					<button class="btn btn-success btn-sm placard-accept" type="button">
						<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
					</button>
				</div>
			</div>
		</form>
	</div>
	<div class="col-1 text-center">
		{% if inventory.itemidLotsHaveImages(item.itemid) %}
			<button class="btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#{{ item.recordno|attrJS }}-lots" aria-expanded="false" aria-controls="{{ item.recordno|attrJS }}-lots">
				<i class="fa fa-list" aria-hidden="true"></i>
			</button>
		{% endif %}
	</div>
	<div class="col-1 text-right">
		$ {{ item.price|currency }}
	</div>
	<div class="col-1 text-right">
		$ {{ item.amount|currency }}
	</div>
	<div class="col-2 text-center">
		<div>
			<a href="{{ page.itemDeleteUrl(item.itemid) }}" class="btn btn-sm btn-danger delete-item" data-itemid="{{ item.itemid }}">
				<i class="fa fa-trash" aria-hidden="true"></i> Delete
			</a>
			&nbsp;
			{% set notesclass = qnotes.notes_exist(item.itemid) ? 'btn-info text-white' : 'btn-light border border-dark' %}
			<button class="btn btn-sm {{ notesclass }}" type="button" data-toggle="modal" data-target="#notes-modal" aria-controls="notes-modal" data-itemid="{{ item.itemid }}">
				<i class="fa fa-commenting" aria-hidden="true"></i> Notes
			</button>
		</div>
	</div>
</div>
