<div class="list-group-item bg-light">
	<b>{{ item.itemid }} Allocated Lots</b>
</div>
<div class="list-group-item">
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-3"><b>Lot #</b></div>
		<div class="col-sm-2 text-right"><b>Allocated Qty</b></div>
		<div class="col-sm-2"></div>
		<div class="col-sm-3"></div>
	</div>
</div>
{% for lot in cart.lots.lotsByLinenbr(item.recordno) %}
	<div class="list-group-item">
		<div class="row">
			<div class="col-sm-2"></div>
			<div class="col-sm-3">{{ lot.lotserial }}</div>
			<div class="col-sm-2 text-right">
				<form action="{{ page.url }}" method="POST">
					<input type="hidden" name="action" value="update-lot-qty">
					<input type="hidden" name="itemID" value="{{ item.itemid }}">

					<div class="placard placard-qty" data-ellipsis="true" data-initialize="placard">
						<div class="placard-popup"></div>
						<div class="placard-header">
							<b>Qty</b> <span class="qty"></span>
						</div>
						<input class="form-control placard-field form-control-sm text-right pull-right w-50 qty-input" type="number" name="qty" value="{{ lot.qty }}" data-qty="{{ lot.qty }}" autocomplete="off">
						<div class="placard-footer">
							<a class="placard-cancel" href="#">Cancel</a>
							<button class="btn btn-success btn-sm placard-accept" type="button">
								<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
							</button>
						</div>
					</div>
				</form>
			</div>
			<div class="col-sm-2"></div>
			<div class="col-sm-3 text-center">
				<a href="{{ page.lotDeleteUrl(lot.linenbr, lot.lotserial) }}" class="btn btn-sm btn-danger delete-item" data-itemid="{{ item.itemid }}">
					<i class="fa fa-trash" aria-hidden="true"></i> Delete
				</a>
			</div>
		</div>
	</div>
{% endfor %}
