<form action="{{ page.url }}" method="post" id="add-item-form">
	<input type="hidden" name="action" value="add-item">
	
	<div class="row lookup-item">
		<div class="col-4">
			{% include 'util/bootstrap/form/input-group.twig' with {
					'inputgroup': {
						'type': 'prepend',
						'size': 'sm',
						'input': {
							'name': 'itemID',
							'value': '',
							'attributes': {
								'placeholder': 'Item ID / Description',
								'aria-label':  'Item ID'
							}
						},
						'button': {
							'colorclass': 'btn-secondary',
							'text': 'fa fa-search'|icon,
							'attributes': {
								'title': 'Search Items',
								'data-toggle': 'modal',
								'data-target': '#ajax-modal',
								'data-lookupurl': pages.get('template=items-search').url,
								'data-input': '#itemID'
							}
						}
					}
				}
			%}
			<small class="text-muted description1">Description</small> <br>
			<small class="text-muted description2"></small> <br>
			<small class="text-muted available"></small>
		</div>
		<div class="col-1 text-center">
			<span class="uomsale"></span>
		</div>
		<div class="col-2 text-right">
			<input type="number" class="form-control form-control-sm text-right w-75 pull-right qty-input" name="qty" id="addqty" min="1">
		</div>
		<div class="col">
			<button type="submit" class="btn btn-success">
				Add <i class="fa fa-cart-plus" aria-hidden="true"></i>
			</button>
		</div>
		<div class="col text-right">

		</div>
		<div class="col"></div>
	</div>
</form>
