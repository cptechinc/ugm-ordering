$(function() {
	$.notify({
		// options
		title: '{{ response.success ? 'Success!' : 'Error'}}',
		message: '{{ response.message }}',
		icon: 'fa fa-shopping-cart',
		url: '{{ pages.get('template=cart').url }}',
		target: '_self'
	},{
	// settings
		type: '{{ response.success ? 'success' : 'danger'}}',
		delay: 4000,
		showProgressbar: true,
	});
});
