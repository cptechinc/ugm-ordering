{% set uom_desc = item.item.uom_sale == 'LBW' ? 'EA' : item.item.uom_sale %}
{% set qtyAvailable = inventory.getAvailability(item.itemid) %}

<div class="col-12 col-sm-4 form-group">
	<div class="card">
		<img class="card-img-top" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22286%22%20height%3D%22180%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20286%20180%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_1665ef17807%20text%20%7B%20fill%3Argba(255%2C255%2C255%2C.75)%3Bfont-weight%3Anormal%3Bfont-family%3AHelvetica%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_1665ef17807%22%3E%3Crect%20width%3D%22286%22%20height%3D%22180%22%20fill%3D%22%23777%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%22107.18333435058594%22%20y%3D%2296.3%22%3ENo Image Found%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" alt="Card image cap">

		<div class="card-body">
			<h5 class="card-title">{{ item.itemid }}</h5>

			<div class="card-text">
				<small>{{ item.description1 }}</small><br>
				<small>{{ item.item.description2 }}</small>
				<div class="row">
					<div class="col-6">
						<small>UoM : {{ uom_desc }}</small>
					</div>
					<div class="col-6 text-right">
						{% if inventory.getInventory().itemidLotsHaveImages(item.itemid) %}
							<a href="{{ item.url }}" class="btn btn-primary btn-sm">
								<i class="fa fa-list" aria-hidden="true"></i> Options
							</a>
						{% endif %}
					</div>
				</div>
			</div>
			<p class="card-text"></p>

			<form action="{{ pages.get('template=cart').url }}" method="POST">
				<input type="hidden" name="action" value="add-item">
				<input type="hidden" name="itemID" value="{{ item.itemid }}">
				<input type="hidden" name="page" value="{{ page.fullURL.getUrl() }}">

				<div class="row mb-1">
					<div class="col-6"></div>
					<div class="col-6 text-right">
						<span class="badge bg-dark text-light">
							{% if input.get.offsetExists('ordn') %}
								On Order: {{ orderEditor.allocatedLots.qty(input.get.text('ordn'), lot.lot) + 0 }}
							{% else %}
								In Cart: {{ cart.items.qtyItemid(item.itemid) }}
							{% endif %}
						</span>
					</div>
				</div>

				<div class="row mb-1">
					<div class="col-6">
						<label for="qty">Qty</label>
					</div>
					<div class="col-6 text-right">
						Available: {{ qtyAvailable }}
					</div>
				</div>
				{% if qtyAvailable > 0 %}
					<div class="row">
						<div class="col-6">
							{% include 'util/bootstrap/form/input.twig' with {
									'input': {
										'id': '',
										'name': 'qty',
										'type': 'number',
										'addclasses': ['text-right'],
										'value': '1',
										'attributes': {
											'size': '4',
											'disabled': qtyAvailable == 0,
											'max': qtyAvailable + 0
										}
									}
								}
							%}
						</div>
						<div class="col-6 text-right">
							<button class="btn btn-success" type="submit" {{ qtyAvailable > 0 ? '' : 'disabled' }}>
								<i class="fa fa-cart-plus" aria-hidden="true"></i> Add to Cart
							</button>
						</div>
					</div>
				{% else %}
					<span class="btn btn-block btn-warning">Out of Stock</span>
				{% endif %}
			</form>
		</div>
	</div>
</div>
