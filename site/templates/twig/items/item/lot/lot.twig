{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page(template=item)
	lot                    ['lot' => $lotnbr, 'qty' => $qty]
	docm                   Dplus\DocManagement\Finders\Lt\Img
#}
<div class="card mb-4 shadow-sm">
	{% if docm.hasImage(lot.lotserial) %}
		<img src="{{ docm.getViewer().url(docm.getImageFilename(lot.lotserial)) }}" class="card-img-top img-fluid vh-40" alt="Lot #{{ lot.lot }} Image">
	{% else %}
		<svg class="bd-placeholder-img card-img-top vh-40" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
			<title>Placeholder</title>
			<rect width="100%" height="100%" fill="#55595c"></rect>
			<text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
		</svg>
	{% endif %}

	<div class="card-body">
		<h5>Lot # {{ lot.lotserial }}</h5>

		<form action="{{ pages.get('template=cart').url }}" method="POST">
			<input type="hidden" name="action" value="add-lot">
			<input type="hidden" name="itemID" value="{{ page.itemid }}">
			<input type="hidden" name="lot" value="{{ lot.lotserial }}">
			{% if config.ajax == false %}
				<input type="hidden" name="page" value="{{ page.fullURL.getUrl() }}">
			{% endif %}
			<div class="row mb-1">
				<div class="col-6"></div>
				<div class="col-6 text-right">
					<span class="badge bg-dark text-light">
						In Cart: {{ cart.lots.getLotQty(lot.lotserial) }}
					</span>
				</div>
			</div>
			<div class="row mb-1">
				<div class="col-6">
					<label for="qty">Qty</label>
				</div>
				<div class="col-6 text-right">
					Available: {{ lot.qty + 0 }}
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<input class="form-control text-right" type="text" name="qty" size="4" value="1">
				</div>
				<div class="col-6 text-right">
					<button class="btn btn-success" type="submit">
						<i class="fa fa-cart-plus" aria-hidden="true"></i> Add to Cart
					</button>
				</div>
			</div>
		</form>
	</div>
</div>
