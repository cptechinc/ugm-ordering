<h3>Set up Recovery</h3>
<div class="row">
	<div class="col-sm-6">
		<form id="setup-recovery-form" action="{{ page.url }}">
			<input type="hidden" name="action" value="setup-recovery">

			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" class="form-control-plaintext form-control-sm" name="email" id="email" value="{{ user.email }}" readonly>
			</div>
			<div class="form-group">
				<label for="maiden">Mother's Maiden Name</label>
				<input type="text" class="form-control form-control-sm" name="maiden" id="maiden">
			</div>
			<div class="form-group">
				<label for="city">City Born in</label>
				<input type="text" class="form-control form-control-sm" name="city" id="city">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" class="form-control form-control-sm" name="password" id="password">
			</div>
			<div class="form-group">
				<label for="new">New Password</label>
				<input type="password" class="form-control form-control-sm" name="new" id="new">
			</div>
			<div class="form-group">
				<label for="confirm">Confirm New Password</label>
				<input type="password" class="form-control form-control-sm" name="confirm" id="confirm">
			</div>
			<button type="submit" class="btn btn-success">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>
		</form>
	</div>
</div>
