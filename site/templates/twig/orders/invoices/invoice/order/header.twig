{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	order                  SalesHistory
#}
<div class="row mt-4">
	<div class="col-sm-4">
		<legend class="font-weight-bold text-secondary">
			Billing
		</legend>
		<address>
			{{ order.customer.name }} ({{ order.custid }})
			<br>
			{{ order.customer.address1 }} <br>
			{% if order.customer.address2 %}
				{{ order.customer.address2 }} <br>
			{% endif %}
			{{ order.customer.city ~ ', ' ~ order.customer.state ~ ' ' ~ order.customer.zip }}
		</address>

		<legend class="font-weight-bold text-secondary">
			Shipping
		</legend>
		<address>
			{{ order.shipto_name }} ({{ order.shiptoid }})
			<br>
			{{ order.shipto_address1 }} <br>
			{% if (order.shipto_address2) %}
				{{ order.shipto_address2 }} <br>
			{% endif %}
			{{ order.shipto_city ~ ', ' ~ order.shipto_state ~ ' ' ~ order.shipto_zip}}
		</address>

		<legend class="font-weight-bold text-secondary">Contact</legend>
		<div class="row">
			<div class="col-sm-5">Contact:</div>
			<div class="col-sm-7 text-right">{{ order.contact }}</div>
		</div>
		<div class="row">
			<div class="col-sm-5">Phone:</div>
			<div class="col-sm-7 text-right">
				<a href="tel:{{ order.phone }}" class="link">{{ order.phone|phone_us }}</a>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-5">Fax:</div>
			<div class="col-sm-7 text-right">
				<a href="tel:{{ order.fax }}" class="link">{{ order.fax|phone_us }}</a>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-5">Email:</div>
			<div class="col-sm-7">
				<a href="mailto:{{ order.email }}" class="link">{{ order.email }}</a>
			</div>
		</div>
	</div>
	<div class="col-sm-8">
		<legend class="font-weight-bold text-secondary text-center">Order Summary</legend>
		<div class="row">
			<div class="col-sm-6">
				<div class="row">
					<div class="col-sm-7">Order Date</div>
					<div class="col-sm-5 text-right">{{ order.date_ordered|convertdate }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Invoice Date</div>
					<div class="col-sm-5 text-right">{{ order.date_invoiced|convertdate }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Items on Order</div>
					<div class="col-sm-5 text-right">{{ order.count_items() }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Subtotal:</div>
					<div class="col-sm-5 text-right">$ {{ order.subtotal_nontax|currency }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Shipping:</div>
					<div class="col-sm-5 text-right">$ {{ order.total_freight|currency }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Tax:</div>
					<div class="col-sm-5 text-right">$ {{ order.total_tax|currency }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Total:</div>
					<div class="col-sm-5 text-right">$ {{ order.total_total|currency }}</div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="row">
					<div class="col-sm-7">Status</div>
					<div class="col-sm-5 text-right">{{ order.status()|capitalize }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Cust PO</div>
					<div class="col-sm-5 text-right">{{ order.custpo }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Release #</div>
					<div class="col-sm-5 text-right">{{ order.releasenumber }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Shipvia</div>
					<div class="col-sm-5 text-right">{{ order.shipvia }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Terms Code</div>
					<div class="col-sm-5 text-right">{{ order.termscode }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Salesperson 1:</div>
					<div class="col-sm-5 text-right">{{ order.salesperson_1 }}</div>
				</div>
			</div>
		</div>
	</div>
</div>
