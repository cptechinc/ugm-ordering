{% set customer = editm.get_customer(orderedit.ordernumber) %}
{% include 'orders/order/edit/billto.twig' %}
<div class="mb-3">
	<form id="order-form" action="{{ page.url }}">
		<input type="hidden" name="action" value="update-order">
		<input type="hidden" name="ordn" value="{{ orderedit.ordernumber }}">

		<div class="row">
			<div class="col-sm-6">
				<h3 class="font-weight-bold text-secondary mt-4">Shipping</h3>
				{% include 'orders/order/edit/shipto.twig' %}
			</div>

			<div class="col-sm-6">
				<h3 class="font-weight-bold text-secondary mt-4">Order Information</h3>
				{% include 'orders/order/edit/order-order.twig' %}
			</div>
		</div>
		<div class="d-flex justify-content-between align-items-center">
			<button type="submit" class="btn btn-success">
				<i aria-hidden="true" class="fa fa-floppy-o"></i> Save
			</button>
			<a href="{{ page.url_exitorder(orderedit.ordernumber) }}" class="btn btn-warning">
				<i aria-hidden="true" class="fa fa-sign-out"></i> Exit
			</a>
		</div>

	</form>
</div>
