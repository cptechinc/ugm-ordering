<div class="list-group-item bg-light border-bottom">
	<div class="row">
		<div class="col-sm-4">
			<b>{{ item.itemid }} Requested Lots</b>
		</div>
		<div class="col-sm-2 text-center">
			{% include 'util/bootstrap/html/button.twig' with {
					'button': {
						'size': 'sm',
						'colorclass': 'btn-secondary',
						'text': 'fa fa-search'|icon,
						'attributes': {
							'title': 'Search Lots',
							'data-toggle': 'modal',
							'data-target': '#ajax-modal',
							'data-lookupurl': page.itemLotsUrl(item.itemid, item.ordernumber)
						}
					}
				}
			%}
		</div>
	</div>
</div>
<div class="list-group-item">
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-3"><b>Lot #</b></div>
		<div class="col-sm-2 text-right"><b>Requested Qty</b></div>
		<div class="col-sm-2"></div>
		<div class="col-sm-3"></div>
	</div>
</div>
{% for lot in editor.allocatedLots.allocatedLots(orderedit.ordernumber, item.linenbr) %}
	<div class="list-group-item">
		<div class="row">
			<div class="col-sm-2">
				{% include 'util/bootstrap/html/button.twig' with {
						'button': {
							'size': 'sm',
							'colorclass': 'btn-secondary',
							'text': 'fa fa-file-image-o'|icon,
							'attributes': {
								'title': 'Lot #' ~ lot.lotserial,
								'data-toggle': 'modal',
								'data-target': '#ajax-modal',
								'data-lookupurl': page.lotUrl(item.itemid, lot.lotserial, item.ordernumber)
							}
						}
					}
				%}
			</div>
			<div class="col-sm-3">{{ lot.lotserial }}</div>
			<div class="col-sm-2 text-right">
				<form action="{{ input.url }}" method="POST">
					<input type="hidden" name="action" value="update-lot-qty">
					<input type="hidden" name="ordn" value="{{ item.ordernumber }}">
					<input type="hidden" name="linenbr" value="{{ item.linenbr }}">
					<input type="hidden" name="lot" value="{{ lot.lotserial }}">

					<div class="placard placard-qty" data-ellipsis="true" data-initialize="placard">
						<div class="placard-popup"></div>
						<div class="placard-header">
							<b>Qty</b> <span class="qty"></span>
						</div>
						<input class="form-control placard-field form-control-sm text-right pull-right w-50 qty-input" type="number" name="qty" value="{{ lot.qtyship + 0 }}" data-qty="{{ lot.qtyship + 0 }}" autocomplete="off">
						<div class="placard-footer">
							<a class="placard-cancel" href="#">Cancel</a>
							<button class="btn btn-success btn-sm placard-accept" type="button">
								<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
							</button>
						</div>
					</div>
				</form>
			</div>
			<div class="col-sm-2"></div>
			<div class="col-sm-3 text-center">
				<a href="{{ page.lotDeleteUrl(item.ordernumber, lot.linenumber, lot.lotserial) }}" class="btn btn-sm btn-danger" data-lot="{{ lot.lotserial }}">
					<i class="fa fa-trash" aria-hidden="true"></i> Delete
				</a>
			</div>
		</div>
	</div>
{% endfor %}
