<div class="mb-3">
	<a href="{{ customer.parent.url }}" class="btn btn-secondary">
		<i class="fa fa-undo" aria-hidden="true"></i> Return to List
	</a>
</div>
<div class="border-bottom border-primary mb-3">
	<span class="h3 font-weight-bold ">{{ customer.title }}</span>
</div>
<form action="{{ customer.url }}" method="POST" id="customer-permissions-form">
	<input type="hidden" name="custID" value="{{ customer.custid }}">
	<p>
		Choose the Following Item Groups that this customer can see items from. <br>
		<b>If</b> none are checked then this customer does not have any restrictions.
	</p>
	<div class="mb-3">
		{% for group in permissionsm.itemgroups() %}
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="check-{{ group.groupcode }}" name="groupcodes[]" value="{{ group.groupcode }}" {{ customer.has_groupcode(group.groupcode) ? 'checked' : ''}}>
				<label class="custom-control-label" for="check-{{ group.groupcode }}">{{ group.title }}</label>
			</div>
		{% endfor %}
	</div>
	<div class="d-flex justify-content-between align-items-center">
		<button type="submit" class="btn btn-success" name="action" value="update-customer">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<a href="{{ customer.restrictions_deleteURL(customer.custid) }}" class="btn btn-danger delete">
			<i class="fa fa-trash-o" aria-hidden="true"></i> Delete
		</a>
		<a href="{{ customer.parent.url }}" class="btn btn-warning">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</a>
	</div>
</form>
